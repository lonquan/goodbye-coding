{
    "name": "coding-to-github/migration-tool",
    "description": "A CLI tool for migrating code repositories from Coding platform to GitHub",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Migration Tool Team",
            "email": "team@example.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/http-client": "^7.0",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.50",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "GoodbyeCoding\\Migration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoodbyeCoding\\Migration\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/migration.php"
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyse",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
